---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import logoop from "../../images/logoop.svg"
// import logoop from "/logoop.svg";
import SocialN from "../../components/SocialN.astro";
import Tool from "../../components/Tool.astro";
import LcdEditor from "../../images/lcdeditor.webp";
import { getLangFromUrl, useTranslations } from '../../i18n/utils'; 
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
  return [
    { params: { locale: 'en' } },
    { params: { locale: 'es' } },
  ];
}

---
<Layout title="Opentronika">
	<!-- <Circuit/> -->
	<!-- <Background/> -->
	<Header buttons={["Channel","Tools","About"]}></Header>
	<main class=" xl:h-screen relative overflow-auto snap-y xl:snap-mandatory">
		<section class=" md:h-screen grid place-content-center grid-cols-1 md:grid-cols-2 snap-center" id="home">
			<div>
				<div class="p-10">
					<img src={logoop.src} alt="logo" class="h-50 mx-auto drop-shadow-lg">
				</div>
				<article class=" text-center">
					<h1 class=" text-4xl text-white m-3">Opentronika</h1>
					<h3 class=" text-3xl text-white m-2">{t("description")}</h3>
				</article>
			</div>
			<SocialN></SocialN>
		</section>
		<section class="grid xl:h-screen place-content-center snap-center overflow-hidden" id="tools">
			<h1 class=" text-center text-3xl text-white mx-auto">Tools</h1>
			<hr class="transition ease-in-out delay-150 m-5" >
			<article class=" flex flex-wrap place-content-center ">
				<Tool src={LcdEditor.src} body={t("lcd-editor-pro")} title='LCD editor pro' href='https://opentronika.org/lcd-editor-pro/'> </Tool>
			</article>
		</section>		
	</main>
</Layout>

<style>
	html{
		font-family: Verdana, Geneva, Tahoma, sans-serif;
		background: linear-gradient(91deg, #0C459B 0%, #005acce7 79.70%);
		scroll-behavior: auto;
	}
	body{
		margin: 0%;
	}
	.logoshadow{
		text-shadow: 30px;
	}
</style>

