---
export interface Props {
	title: string;
	body: string;
	href: string;
	src: any;
}

const { src, href, title, body } = Astro.props;
---
<div class=" bg-white bg-opacity-30 text-white hover:-translate-y-1 hover:scale-110 hover:text-gray-600 hover:bg-opacity-80 duration-300 rounded-lg shadow dark:bg-gray-800 dark:bg-opacity-50 dark:hover:text-white m-3 ">
        <a href={href} target="_blank">
            <div class="flex flex-wrap justify-center max-w-2xl ">
                <img class="my-auto p-5 rounded max-h-60" src={src} alt="product image" />
            <div class="px-3 pb-5 max-w-lg">
                    <h1 class="text-xl font-semibold tracking-tight text-center m-5">{title}</h1>
                    <p class="text-md text-justify">{body}</p>
            </div>
        </div>
    </a>
        
</div>
